<h1 class= "text-center mt-4" id = "nome">Lista SCM</h1>

<div class="container">
  <% @users.each do |user| %>
    <div class="card mt-4 col-12 mb-4">
      <div class="card-body">
        <div class="card-text">
          <p>
            <strong> <%= user.username %></strong>
            <small> <% if logged_in? && user == current_user %>
              <%= link_to "modifica dati personali", edit_user_path(user), class: "text-success ml-4" %>
            <% end %>
            </small>

            <small class="text-muted float-right">
              <i>Iscritto: <%= user.created_at.strftime("%d %b. %Y") %></i>
            </small>
          </p>
          <p>
            <%= "Recensioni aggiunte: #{user.articles.count}" %>
          </p>
          <p>
            <%= "Film aggiunti: #{user.films.count}" %>
          </p>
          <p>
            <%= "Apprezzamenti ricevuti: #{user.likes.count}" %>
            <small class="text-white float-right"><%= user.id %>
            </small>
          </p>

        </div>
      </div>
    </div>
   <% end %>
  </div>

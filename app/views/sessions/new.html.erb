<div class="container">
	<div class= "row justify-content-center mt-4">
		<h4>Accedi con le tue credenziali</h4>
		<div class= "col-10">
			<%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-secondary rounded", local: true) do |f| %>
				<div class="form-group row">
					<div class="col-10 offset-1">
						<%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Username" %>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-10 offset-1">
						<%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Email" %>
					</div>
				</div>
				<div class="form-group row justify-content-center">
					<%= f.submit class: "btn btn-outline-light btn-lg", value: "Log in" %>
				</div>
			<% end %>
		</div>
		<div class="mb-3">
			<%= link_to '[Non ti sei ancora iscritto?]', signup_path, class: "text-secondary" %>
      |
			<%= link_to '[Torna alla lista dei film]', films_path, class: "text-secondary" %>
		</div>
	</div>
</div>

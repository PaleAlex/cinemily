<div class="container">
	<div class= "row justify-content-center">
		<div class= "col-10">
			<%= render 'shared/errors', obj: @article %>
			<%= form_with(model: @article, class: "shadow p-3 mb-3 bg-secondary rounded", local: true) do |f| %>
				<div class="form-group row">
					<div class="col-10 offset-1">
						<%= f.hidden_field :film_id %>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-10 offset-1">
						<%= f.text_area :description, rows:10, class: "form-control shadow rounded", placeholder: "Scrivi il tuo commento" %>
					</div>
				</div>
				<div class="form-group row justify-content-center">
					<%= f.submit class: "btn btn-outline-light btn-lg", value: "Aggiungi" %>
				</div>
			<% end %>
		</div>
		<div class="mb-3">
			<%= link_to '[Cancella modifiche e ritorna alla lista]', film_path(@article.film_id), class: "text-secondary" %>
		</div>
	</div>
</div>
